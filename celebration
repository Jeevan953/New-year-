    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Create snowflakes
        function createSnowflakes() {
            const snowContainer = document.body;
            const snowflakeCount = 50;
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.innerHTML = 'â„';
                snowflake.classList.add('snowflake');
                
                // Random properties
                const size = Math.random() * 1.5 + 0.5;
                const startPosition = Math.random() * 100;
                const fallDuration = Math.random() * 10 + 10;
                const fallDelay = Math.random() * 5;
                
                snowflake.style.left = `${startPosition}vw`;
                snowflake.style.fontSize = `${size}rem`;
                snowflake.style.animationDuration = `${fallDuration}s`;
                snowflake.style.animationDelay = `${fallDelay}s`;
                
                snowContainer.appendChild(snowflake);
                
                // Remove snowflake after animation completes
                setTimeout(() => {
                    snowflake.remove();
                }, (fallDuration + fallDelay) * 1000);
            }
        }
        
        // Create snowflakes periodically
        setInterval(createSnowflakes, 3000);
        createSnowflakes(); // Initial call
        
        // Surprise button
        document.getElementById('surpriseBtn').addEventListener('click', function() {
            const messages = [
                "Ho Ho Ho! Merry Christmas!",
                "Wishing you a magical Christmas!",
                "May your Christmas be filled with joy!",
                "Sending you warm holiday wishes!",
                "Peace, love, and joy to you this Christmas!"
            ];
            
            const randomMessage = messages[Math.floor(Math.random() * messages.length)];
            
            // Create a temporary alert
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success position-fixed top-50 start-50 translate-middle';
            alertDiv.style.zIndex = '1050';
            alertDiv.textContent = randomMessage;
            alertDiv.innerHTML = `
                <div class="text-center">
                    <h4>ðŸŽ„ ${randomMessage} ðŸŽ…</h4>
                    <button class="btn btn-sm btn-christmas mt-2" onclick="this.parentElement.parentElement.remove()">Close</button>
                </div>
            `;
            
            document.body.appendChild(alertDiv);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        });
    </script>
